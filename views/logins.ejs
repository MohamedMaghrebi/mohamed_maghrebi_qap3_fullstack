        <h1>Welcome to bcrypt :</h1>
        <h3><div class="logins content">
            <form action="/logins" method="POST">
                <h2><p>Logins: </p></h2>
            <% if (theLogins.length > 0) { %>
                <% theLogins.forEach(login => { %>
                    <b><%= login.first_name %></b>
                    <b><%= login.last_name %></b>
                    <a href="/logins/<%=login.id%>/edit?first_name=<%=login.first_name%>">edit</a>
                    <a href="/logins/<%=login.id%>/delete?first_name=<%=login.first_name%>">delete</a></br>
                    <% }) %>
            <% } %>
            </br><label>Add Login:</label></br>
            
            <label>first_name:
                <input type="text" id="first_name" name="first_name" value="<%= locals.first_name %>" required>
            </label>
            <label>number:
                <input type="text" id="number" name="number" value="<%= locals.number %>" required>
            </label>
            <label>last_name:
                <input type="text" id="last_name" name="last_name" value="<%= locals.last_name %>" required>
            </label>
            <label>email:
                <input type="text" id="email" name="email" value="<%= locals.email %>" required>
            </label>
            <br>
            </br>
            <label>Password:
                <input type="password" id="password" name="password" value="<%= locals.password %>" required>
            </label>
            </br>
            
            <button>POST</button>
        </form>
        </div>
    </h3>
    </body>

</html>